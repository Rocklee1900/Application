<?xml version="1.0" encoding="utf-8"?>

<resources>
            <!-- Base Theme (Optional) -->
            <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
                <item name="colorPrimary">@color/blue</item>
                <item name="colorPrimaryVariant">@color/black</item>
                <item name="colorOnPrimary">@color/white</item>
            </style>
            <style name="primaryButtonStyle">
                <item name="android:backgroundTint">@color/bg_btn</item>
                <item name="android:textColor">@color/white</item>
                <item name="android:textSize">@dimen/text_btn</item>
                <item name="android:height">60dp</item>
                <item name="android:layout_width">140dp</item>
                <item name="cornerRadius">16dp</item>
            </style>
            <style name="secondaryButtonStyle">
                <item name="android:backgroundTint">@color/bg_btn</item>
                <item name="android:textColor">@color/white</item>
                <item name="android:textSize">@dimen/text_btn</item>
                <item name="android:height">40dp</item>
                <item name="android:layout_width">140dp</item>
                <item name="cornerRadius">8dp</item>
            </style>

            <!-- Custom Style for Rounded Outlined TextInputLayout -->
            <style name="RoundedOutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <item name="boxBackgroundColor">@android:color/white</item>
                <item name="boxStrokeColor">@color/et_color</item> <!-- Border Color -->
                <item name="android:textColorHint">@color/black</item>
                <item name="shapeAppearance">
                    @style/MyCustomShape
                </item>
            </style>

            <!-- Custom Shape for Rounded Corners -->
            <style name="MyCustomShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
                <item name="cornerSize">30dp</item>  <!-- Adjust rounded corner size -->
            </style>
    <style name="BottomNavFocusIndicator" parent="">
        <item name="android:color">@color/colorFocus</item> <!-- Focus color -->
    </style>

    <style name="SpecItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/spec_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>

